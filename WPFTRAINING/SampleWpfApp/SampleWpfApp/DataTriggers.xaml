            </TextBlock.Style>
        </TextBlock>
    </><-->
    <Window.Resources>
        <model:StudentDatabase x:Key="students"/>
        <model:MarksConverter x:Key="myconverter"/>
    </Window.Resources>
    <Grid>
        <StackPanel Margin="2">
            <ListBox Margin="2" ItemsSource="{Binding Source={StaticResource students}, Path=AllStudents}">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <!--DataTemplate.Triggers>
                            <DataTrigger Binding="{Binding Path=Marks, Converter ={StaticResource myconverter}}" Value="Red">
                                <Setter Property="ListBoxItem.Foreground" Value="Green"/>
                                <Setter Property="ListBoxItem.Background" Value="Red"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=Marks, Converter ={StaticResource myconverter}}" Value="Yellow">
                                <Setter Property="ListBoxItem.Foreground" Value="Red"/>
                                <Setter Property="ListBoxItem.Background" Value="Green"/>
                            </DataTrigger>
                            <DataTrigger Binding="{Binding Path=Marks, Converter ={StaticResource myconverter}}" Value="Green">
                                <Setter Property="ListBoxItem.Foreground" Value="Blue"/>
                                <Setter Property="ListBoxItem.Background" Value="Green"/>
                            </DataTrigger>
                        <-->
                        <StackPanel>
                            <TextBlock Background="{Binding Path=Marks,
                                Converter={StaticResource myconverter}}" Text="{Binding StudentName}"/>
                        </StackPanel>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </StackPanel>
    </Grid>
