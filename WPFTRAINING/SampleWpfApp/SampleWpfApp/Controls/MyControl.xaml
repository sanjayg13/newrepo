<Window x:Class="SampleWpfApp.Controls.MyControl"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWpfApp.Controls"
        mc:Ignorable="d"
        x:Name="myctrl"
        Title="MyControl" Height="450" Width="800">
    <Grid>
        <Border Margin="2" CornerRadius="5" BorderThickness="2" BorderBrush="Red">
            <TextBlock Margin="2" Width="300" Height="100" Text="{Binding Path=MyText, ElementName=myctrl}"/>
        </Border>
    </Grid>
</Window>
