<Window x:Class="SampleWpfApp.WrapPanelExample"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SampleWpfApp"
        mc:Ignorable="d"
        Title="WrapPanelExample" Height="450" Width="800">
    <StackPanel Margin="2" HorizontalAlignment="Center">
        <Label Content="Employee Details" FontSize="20pt"></Label>
        <WrapPanel Margin="2">
            <Label>Enter the Name:</Label>
            <TextBox Name="txtName" Width="300px"/>
        </WrapPanel>
        <WrapPanel Margin="2">
            <Label>Enter the Email:</Label>
            <TextBox Name="txtemail" Width="300px"/>
        </WrapPanel>
        <WrapPanel Margin="2">
            <Label>Enter the phone:</Label>
            <TextBox Name="txtPhone" Width="300px"/>
        </WrapPanel>
        <WrapPanel Margin="2">
            <Label>Enter the Salary:</Label>
            <TextBox Name="txtSalary" Width="300px"/>
        </WrapPanel>
        <WrapPanel Margin="2" HorizontalAlignment="Center">
            <Button Width="100px" Margin="5" Click="OnSubmit" >Submit</Button>
            <Button Width="100px" Margin="5" Click="OnCancel" >Cancel</Button>
        </WrapPanel>
    </StackPanel>
</Window>
